
@{
    ViewBag.Title = "Danh sach san pham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.BeginForm("AddUser", "Admin", FormMethod.Post, new { area = "Admin", @class = "my_form" }) {
    <div class="wrapper wrapper-content animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">Tìm kiếm sản phẩm</div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="col-md-4">Hình ảnh: </div>
                                @*<div class="col-md-8"><input type="file" id="flImage" name="ImageUpload" multiple onchange='uploadTempImage()' class="form-control" /></div>*@
                                <div class="col-md-8"><input type="file" id="flImage" name="ImageUpload" multiple class="form-control" /></div>
                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                        <div class="row">
                            <div id="imgPreview" style="margin-bottom:5px"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="center-block">
                                    <button type="button" class="btn btn-info" onclick="checkLocation()">Thêm mới</button>
