    <div class="col-sm-5">
        <div class="view-product">
            @{
                string[] imgs = Model.Image.Split(';');
                string productImgURL = @"../../Images/Products/" + Model.CategoryId + "/" + imgs[0];
            }
            <img src="@productImgURL" alt="@Model.ProductName" />
        </div>
        <div id="similar-product" class="carousel slide" data-ride="carousel">

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @{ 
                    string str = ""; int next = 0;
                    int count = imgs.Length;
                    if (Model.Video != null) { imgs[count -1] = Model.Video;}
                }
                @for (var i = 0; i < count; i++)
                {
                    next++;
                    if (imgs[i] != "")
                    {
                        string ImgURL = @"../../Images/Products/" + Model.CategoryId + "/" + imgs[i];
                        if (next == 1)
                        {
                            str += "<div class=\"item active\">";
                        }
                        else if (i % 3 == 0)
                        {
                            str += "</div>";
                            str += "<div class=\"item\">";
                        }
                        if(i == (count - 1) && Model.Video !=null)
                        {
                            str += "<a href=\"#\" onclick=\"showVideo(\'" + Model.Video + "\')\"><img src=\"../../Images/home/Video.png \" alt='' width='85px' /></a>";
                        }
                        else
                        {
                            str += "<a href=\"#\" onclick=\"ChangeThumbnails(\'" + ImgURL + "\')\"><img src=\"" + ImgURL + "\" alt='' width='85px'/></a>";
                        }
                        if ((i == imgs.Length - 2 && Model.Video =="") || (i == imgs.Length - 1 && Model.Video != null))
                        {
                            str += "</div>";
                        }
                    }
                }
                @Html.Raw(str);

            </div>

            <!-- Controls -->
            <a class="left item-control" href="#similar-product" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="right item-control" href="#similar-product" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>

