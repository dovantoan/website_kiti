<script>

    function showVideo(video) {
        //$(document).find('.view-product').find('img').remove();
        $('.view-product').empty();
        var str = "<iframe width='329' height='306' src='https://www.youtube.com/embed/" + video + "' allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture'></iframe>";
        $('.view-product').append(str);
    }
    function ChangeThumbnails(item) {
        //$(document).find('.view-product').find('img').remove();
        $('.view-product').empty();
        $(document).find('.view-product').append('<img src="' + item + '" alt="" />');
        //$('.view-product').empty();
        //$('.view-product').append('<img src = "' + item + '" alt = "" />');
    }

    $(document).ready(function () {
        $("input[name^='Size_']").each(function () {
            if ($(this).hasClass("btnActive")) {
                $("input[name='property']").val($(this).attr('data'));
                return false;
            }
        });
        $('#touchspinDown').click(function () {
            if ($('#qty').val() > 1) {
                $('#qty').val(Number($('#qty').val()) - 1);
            }
        });
        $('#touchspinUp').click(function () {
            if ($('#qty').val() < 100) {
                $('#qty').val(Number($('#qty').val()) + 1);
            }
        });
    });
    function selectColor(colorId, e) {
        $("input[name^='color_']").each(function () {
            $(this).removeClass("btnActive");
        });
        e.classList.add('btnActive');
        $("input[name^='Size_']").each(function () {
            $(this).hide();
        });
        $("input[name^='Size_" + colorId + "']").each(function () {
            $(this).show();
        });
        $("input[name^='Size_']").each(function () {
            $(this).removeClass("btnActive");
        });
        $("input[name^='Size_" + colorId + "']").each(function () {
            $(this).addClass('btnActive');
            $("input[name='property']").val($(this).attr('data'));
            return false;
        });
        //alert(colorId);
    }
    function selectSize(data, e) {
        $("input[name^='Size_']").each(function () {
            $(this).removeClass("btnActive");
        });
        e.classList.add('btnActive');
        $("input[name='property']").val(data);
    }
</script>
