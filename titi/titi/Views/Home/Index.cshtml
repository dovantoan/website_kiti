@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //$.jStorage.flush();
            getProductList();
        });
        function getProductList() {
            var _url = "@Url.Action("ListProduct", "Products")";
            $.ajax({
                //url: "/Products/ListProduct",
                url: _url,
                //type: "POST",
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $('#listProduct').html(data);
                },
                processData: false,
                contentType: false,
                error: function (err) {
                    alert(err.responseText);
                }
            });
        }

        function getProductDettails(productId) {
            $.ajax({
                url: "/Products/ProductDetails",
                type: "POST",
                dataType: "html",
                data: {
                    productId: productId
                },
                success: function (data) {
                    $('#productDetails').html(data);
                    $('#listProduct').hide();
                    $('#productDetails').show();
                    //var url = window.location.toString();
                    //window.location = url.replace(/#/, 'san-pham/ao-thun-nam-123');
                },
                error: function (data) {
                    alert(data.responseText);
                }
            });
        }
    </script>
